<Window x:Class="LibrISv2.WindowAddNum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrISv2"
        mc:Ignorable="d"
        Title="Введите номер" Height="230" Width="300" ResizeMode="NoResize"
        FontFamily="Microsoft YaHei UI Light" FontSize="16" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Укажите инвентарный номер" Margin="10" Padding="10" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Name="tbNum" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Name="bNext" Margin="10" Padding="10" Content="ДАЛЕЕ" Click="bNext_Click"/>
    </Grid>
</Window>
